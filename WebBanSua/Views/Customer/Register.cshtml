@model WebBanSua.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký tài khoản</h1>
        <form asp-action="Register">
            <div class="row">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.UserId" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.UserId" class="form-control">
                            <span asp-validation-for="@Model.UserId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                            <input asp-for="@Model.Password" class="form-control">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.FullName"></label><sup>*</sup>
                        <input asp-for="@Model.FullName" class="form-control"/>
                        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                        <input asp-for="@Model.Email" class="form-control" />
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Phone"></label><sup>*</sup>
                        <input asp-for="@Model.Phone" class="form-control" />
                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3" asp-for="@Model.Address"></label><sup>*</sup>
                        <input asp-for="@Model.Address" class="form-control" />
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
