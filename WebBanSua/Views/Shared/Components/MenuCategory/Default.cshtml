@model IEnumerable<WebBanSua.ViewModels.MenuCategoryVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục sản phẩm</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Products" asp-action="Index" asp-route-category="@item.CategoryId">
                            <i class="fas fa-apple-alt me-2"></i>@item.CategoryName
                            </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>