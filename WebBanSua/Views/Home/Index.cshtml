@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<WebBanSua.ViewModels.ProductVM>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layoutcustomer.cshtml";
}
<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5 style="padding-top: 120px;">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Các sản phẩm sữa</h1>
                </div>
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-1">
                                <span class="text-dark" style="width: 130px;">All Products</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex py-2 m-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-2">
                                <span class="text-dark" style="width: 130px;">Vegetables</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-3">
                                <span class="text-dark" style="width: 130px;">Fruits</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-4">
                                <span class="text-dark" style="width: 130px;">Bread</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-5">
                                <span class="text-dark" style="width: 130px;">Meat</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- Danh muc san pham-->
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="row g-4">
                                @foreach (var item in Model)
                                {
                                    <div class="col-md-6 col-lg-4 col-xl-3">
                                        <div class="rounded position-relative fruite-item">
                                            <div class="fruite-img">
                                                <a asp-action="Detail" asp-controller="Products" asp-route-id="@item.ProductId">
                                                    <img src="@Url.Content(item.ImageUrl)" class="img-fluid w-100" />

                                                </a>
                                            </div>
                                            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">
                                                @item.CategoryName
                                            </div>
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom text-start">
                                                <a asp-action="Detail" asp-controller="Products" asp-route-id="@item.ProductId">
                                                    <h4>
                                                        @(string.IsNullOrEmpty(item.ProductName)
                                                                                                            ? "Sản phẩm chưa đặt tên"
                                                                                                            : (item.ProductName.Length > 15
                                                                                                            ? item.ProductName.Substring(0, 15) + "..."
                                                                                                            : item.ProductName))
                                                                                                                            </h4>
                                                                                                                        </a>
                                                                                                                        <p>
                                                    @(string.IsNullOrEmpty(item.Description)
                                                                                                    ? "Chưa có mô tả."
                                                                                                    : (item.Description.Length > 20
                                                                                                    ? item.Description.Substring(0, 20) + "..."
                                                                                                    : item.Description))
                                            </p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0">@((item.Price ?? 0).ToString("N0")) VNĐ</p>
                                                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.ProductId"
                                                   class="btn border border-secondary rounded-pill px-3 text-primary">
                                                    <i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
new PagedListRenderOptions
{
    UlElementClasses = new List<string> { "pagination", "pagination-flex" },
    LiElementClasses = new List<string> { "page-item" },
    PageClasses = new List<string> { "page-link" },
    ActiveLiElementClass = "active"
})